<%= simple_form_for [post, comment], remote: true, defaults: { wrapper_html: {class: 'form-group'}, input_html: {class: 'form-control'}, error_html: {class: 'form-group has-error'} } do |f| %>
  <%= f.input :body, required: false, placeholder: "Comments? Do share." %>
  <%= f.button :submit, "Save", class: "btn btn-success" %>

<% end %>
