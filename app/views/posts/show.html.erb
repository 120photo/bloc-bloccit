<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if@post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
    <%= image_tag( @post.image.url ) %>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>

<div class="col-md-12">
  <% if current_user %>
  <%= render partial: 'comments/form', locals: { topic: @post.topic, post: @post, comment: Comment.new } %>
  <br>
  <% else %>
  <p>
    =p
  </p>
  <% end %>
<% @comments.each do |comment| %>
<div class="media">
  <p>
    <b><%= comment.user.name %>'s 2Â¢:</b>
  </p>
  <p>
    <%= comment.body %>
  </p>
</div>

<% end %>

</div>
</div>
